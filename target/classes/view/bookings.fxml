<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../styles/bookings-view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookingsController">
   <children>
      <TabPane maxHeight="1.7976931348623157E308" style="-fx-background-color: white; -fx-tab-min-width: 100;" stylesheets="@../styles/bookings-view.css">
         <tabs>
            <Tab text="Flight Bookings">
               <content>
                  <VBox spacing="10" style="-fx-padding: 10;">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <children>
                              <Button mnemonicParsing="false" onAction="#refreshTableData" style="-fx-background-color: #00aff0; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 4;" text="Refresh Table">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                        <TableView fx:id="tableView" maxWidth="624.0" prefHeight="400.0" prefWidth="609.0" styleClass="bookings-table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="bookingIdColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking ID" />
                              <TableColumn fx:id="bookingDateColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking Date" />
                              <TableColumn fx:id="customerNameColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Customer" />
                              <TableColumn fx:id="takeOffColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Take Off" />
                              <TableColumn fx:id="destinationColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Destination" />
                              <TableColumn fx:id="airlineColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Airlines" />
                              <TableColumn fx:id="bookingStatusColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking Status" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Hotel Bookings">
               <content>
                  <VBox spacing="10" style="-fx-padding: 10;">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <children>
                              <Button mnemonicParsing="false" onAction="#refreshHotelsTableData" style="-fx-background-color: #00aff0; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 4;" text="Refresh Table">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                        <TableView fx:id="hotelsTableView" styleClass="bookings-table" stylesheets="@../styles/bookings-view.css" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="hBookingIdColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking ID" />
                              <TableColumn fx:id="hBookingDateColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking Date" />
                              <TableColumn fx:id="hCustomerNameColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Customer" />
                              <TableColumn fx:id="hHotelNameBookingColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Hotel" />
                              <TableColumn fx:id="hLocationColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Location" />
                              <TableColumn fx:id="hBookingStatusColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking Status" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Booking History">
               <content>
                  <VBox spacing="10" style="-fx-padding: 10;">
                     <children>
                        <TableView styleClass="bookings-table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking ID" />
                              <TableColumn maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking Date" />
                              <TableColumn maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="100.0" styleClass="bookings-table-header" text="Booking Status" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TabPane>
   </children>
</StackPane>
