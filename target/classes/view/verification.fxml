<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VerificationController"
      stylesheets="@../styles/verificationstyles.css"
      alignment="CENTER" maxHeight="451.0" maxWidth="778.0"
      prefHeight="305.0" prefWidth="695.0" spacing="10"
      style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 20; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 5);">

    <HBox spacing="20" alignment="CENTER" prefHeight="282.0" prefWidth="730.0">
        <children>
            <ImageView fitHeight="282.0" fitWidth="274.0">
                <image>
                    <Image url="@../images/verificationcode.png" />
                </image>
            </ImageView>
            <Pane prefHeight="200.0" prefWidth="444.0">
                <children>
                    <Text layoutX="137.0" layoutY="20.0"
                          style="-fx-font-size: 24px; -fx-font-weight: bold;"
                          text="Verification" />

                    <Label layoutX="85.0" layoutY="82.0"
                           style="-fx-font-size: 16px;"
                           text="Enter Code:" />

                    <TextField fx:id="verificationCodeField" layoutX="85.0" layoutY="115.0"
                               prefHeight="30.0" prefWidth="275.0"
                               promptText="Enter verification code" />

                    <Button fx:id="verifyButton" layoutX="170.0" layoutY="173.0"
                            onAction="#handleVerifyCode"
                            prefHeight="30.0" prefWidth="105.0"
                            style="-fx-background-color: #007bff; -fx-text-fill: white;"
                            text="Verify" />
                </children>
            </Pane>
        </children>
    </HBox>
</VBox>