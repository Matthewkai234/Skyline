<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="761.0" prefWidth="1366.0" style="-fx-background-color: white; -fx-background-radius: 10px;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ListingsController">
   <children>
      <!-- Main Content Container -->
      <VBox spacing="20.0" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header with Title -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10.0;">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #00affa;"
                         text="Manage Listings" HBox.hgrow="ALWAYS"/>
               </children>
            </HBox>

            <!-- Add New Listing Button -->
            <HBox alignment="TOP_RIGHT" spacing="10.0">
               <children>
                  <Button onAction="#addListingWindow"
                          style="-fx-background-color: #00affa; -fx-text-fill: white; -fx-padding: 10;"
                          text="+ Add New Listing">
                     <cursor>
                        <Cursor fx:constant="HAND"/>
                     </cursor>
                  </Button>
               </children>
            </HBox>


            <!-- Tab Pane for Hotels and Flights -->
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
               <tabs>
                  <!-- Hotels Tab -->
                  <Tab text="Hotels">
                     <content>
                        <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-padding: 15;"
                              VBox.vgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Hotel Listings"
                                     HBox.hgrow="ALWAYS"/>
                              <TableView fx:id="hotelTable" VBox.vgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="hotelIdColumn" text="Hotel ID"/>
                                    <TableColumn fx:id="hotelNameColumn" text="Name"/>
                                    <TableColumn fx:id="locationColumn" text="Location"/>
                                    <TableColumn fx:id="hotelPriceColumn" text="Price"/> <!-- New Column for Price -->
                                    <TableColumn fx:id="hotelRateColumn" text="Rate"/> <!-- New Column for Rate -->
                                    <TableColumn fx:id="hotelActionsColumn" text="Actions"/>
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <!-- Flights Tab -->
                  <Tab text="Flights">
                     <content>
                        <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-padding: 15;"
                              VBox.vgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Flight Listings"
                                     HBox.hgrow="ALWAYS"/>
                              <TableView fx:id="flightTable" VBox.vgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="airlineColumn" text="Airline"/>
                                    <TableColumn fx:id="takeoffCountryColumn" text="Takeoff Country"/>
                                    <TableColumn fx:id="landingCountryColumn" text="Landing Country"/>
                                    <TableColumn fx:id="priceColumn" text="Price"/>
                                    <TableColumn fx:id="flightActionsColumn" text="Actions"/>
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
