<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="761.0" prefWidth="1366.0" style="-fx-background-color: white; -fx-background-radius: 10px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ListingsController">

   <!-- Center Section -->
   <AnchorPane layoutX="178.0" prefHeight="849.0" prefWidth="1011.0">
      <VBox spacing="20.0" style="-fx-padding: 20.0;">
         <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10.0;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manage Listings" />
         </HBox>

         <!-- Buttons -->
         <HBox alignment="TOP_RIGHT" spacing="10.0">
            <Button style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 10;" text="+ Add New Flight" />
            <Button style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 10;" text="+ Add New Hotel" />
         </HBox>

         <!-- Flight Listings -->
         <VBox prefHeight="300.0" prefWidth="971.0" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-padding: 15;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Flight Listings" />
            <TableView fx:id="flightTable" prefWidth="600">
               <columns>
                  <TableColumn fx:id="flightNumberColumn" text="Flight Number" />
                  <TableColumn fx:id="airlineColumn" text="Airline" />
                  <TableColumn fx:id="destinationColumn" text="Destination" />
                  <TableColumn fx:id="departureDateColumn" text="Departure Date" />
                  <TableColumn fx:id="arrivalDateColumn" text="Arrival Date" />
                  <TableColumn fx:id="flightActionsColumn" text="Actions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>

         <!-- Hotel Listings -->
         <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-padding: 15;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Hotel Listings" />
            <TableView fx:id="hotelTable" prefHeight="300.0" prefWidth="939.0">
               <columns>
                  <TableColumn fx:id="hotelIdColumn" text="Hotel ID" />
                  <TableColumn fx:id="hotelNameColumn" text="Name" />
                  <TableColumn fx:id="locationColumn" text="Location" />
                  <TableColumn fx:id="hotelActionsColumn" text="Actions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>
      </VBox>
   </AnchorPane>
</AnchorPane>
