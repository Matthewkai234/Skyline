<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="761.0" prefWidth="1366.0" style="-fx-background-color: white; -fx-background-radius: 10px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ListingsController">
   <AnchorPane layoutX="178.0" prefHeight="761.0" prefWidth="1188.0">
      <VBox spacing="20.0" style="-fx-padding: 20.0;">
         <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10.0;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manage Listings" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox alignment="TOP_RIGHT" spacing="10.0">
            <Button onAction="#addListingWindow" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 10;" text="+ Add New Listing">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </HBox>
         <TabPane fx:id="tabPane" prefHeight="623.0" prefWidth="1137.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
               <Tab text="Hotels">
                  <content>
                     <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-padding: 15;" VBox.vgrow="ALWAYS">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Hotel Listings" HBox.hgrow="ALWAYS"/>
                        <TableView fx:id="hotelTable" prefHeight="300.0" prefWidth="939.0" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="hotelIdColumn" text="Hotel ID" />
                              <TableColumn fx:id="hotelNameColumn" text="Name" />
                              <TableColumn fx:id="locationColumn" text="Location" />
                              <TableColumn fx:id="hotelActionsColumn" text="Actions" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </VBox>
                  </content>
               </Tab>
               <Tab text="Flights">
                  <content>
                     <VBox prefHeight="300.0" prefWidth="971.0" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-padding: 15;" VBox.vgrow="ALWAYS">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Flight Listings" HBox.hgrow="ALWAYS"/>
                        <TableView fx:id="flightTable" prefWidth="600" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="flightNumberColumn" text="Flight Number" />
                              <TableColumn fx:id="airlineColumn" text="Airline" />
                              <TableColumn fx:id="destinationColumn" text="Destination" />
                              <TableColumn fx:id="departureDateColumn" text="Departure Date" />
                              <TableColumn fx:id="arrivalDateColumn" text="Arrival Date" />
                              <TableColumn fx:id="flightActionsColumn" text="Actions" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </VBox>
                  </content>
               </Tab>
            </tabs>
         </TabPane>
      </VBox>
   </AnchorPane>
</AnchorPane>