<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditlistingController">
    <children>
        <!-- Main Content Area -->
        <VBox spacing="15" style="-fx-background-color: #DCDCDC; -fx-padding: 20;" VBox.vgrow="ALWAYS">

            <!-- Title with Back Arrow -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="backButton" text="&lt;" onAction="#handleExitButtonAction" style="-fx-background-color: transparent; -fx-font-size: 18px; -fx-text-fill: #333; -fx-cursor: hand;" />

                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Edit Listing" />
            </HBox>

            <!-- Listing Type -->
            <VBox spacing="5">
                <Label text="Listing Type" />
                <ComboBox fx:id="listingTypeComboBox" promptText="Choose a listing type">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Hotel" />
                            <String fx:value="Flight" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

            <!-- Name/Number -->
            <VBox spacing="5">
                <Label text="Name/Number" />
                <TextField fx:id="nameField" promptText="Enter name or flight number" />
            </VBox>

            <!-- Description -->
            <VBox spacing="5">
                <Label text="Description" />
                <TextArea fx:id="descriptionField" prefRowCount="3" promptText="Enter description" />
            </VBox>

            <!-- Promotional Offer -->
            <VBox spacing="5">
                <Label text="Promotional Offer" />
                <TextField fx:id="promoOfferField" promptText="Enter promotional offer" />
            </VBox>

            <!-- Price -->
            <VBox spacing="5">
                <Label text="Price" />
                <TextField fx:id="priceField" promptText="Enter price" />
            </VBox>

            <!-- Hotel-Specific Fields -->
            <VBox fx:id="hotelFieldsContainer" spacing="10">
                <Label text="Hotel Location" />
                <TextField fx:id="locationField" promptText="Enter hotel location" />
            </VBox>

            <!-- Flight-Specific Fields -->
            <VBox fx:id="flightFieldsContainer" spacing="10">
                <Label text="Take-Off Date" />
                <DatePicker fx:id="takeOffDateField" />

                <Label text="Arrival Date" />
                <DatePicker fx:id="arrivalDateField" />
            </VBox>

            <!-- Image Upload -->
            <VBox spacing="5">
                <Label text="Upload Image" />
                <!-- Box to display the selected image -->
                <VBox fx:id="imageBox" style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10; -fx-background-color: #f9f9f9;" prefWidth="200" prefHeight="200">
                    <ImageView fx:id="uploadedImageView" fitWidth="200" fitHeight="200" preserveRatio="true" />
                </VBox>

                <!-- Button to choose and upload an image -->
                <Button fx:id="uploadImageButton" text="Choose Image" onAction="#handleUploadImage" />
            </VBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveChangesButton" onAction="#handleSaveChanges" prefWidth="120.0"
                        style="-fx-background-color: #00AFF0; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;">
                    Save Changes
                </Button>

                <Button fx:id="resetButton" onAction="#resetFormFields" prefWidth="120.0"
                        style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;">
                    Reset
                </Button>
            </HBox>

            <!-- Success Message -->
            <Label fx:id="successMessageLabel" alignment="CENTER" style="-fx-font-size: 14px; -fx-text-fill: green;" text="" visible="false" />
        </VBox>
    </children>
</VBox>
