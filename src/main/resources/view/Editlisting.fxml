<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Elistingcontroller">
    <children>
        <!-- Main Content Area -->
        <VBox spacing="15" style="-fx-background-color: #DCDCDC; -fx-padding: 20;" VBox.vgrow="ALWAYS">

            <!-- Title with Back Arrow -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Edit Flight" />
            </HBox>

            <!-- Flight ID -->
            <VBox spacing="5">
                <Label text="Flight ID" />
                <TextField fx:id="flightIdField" promptText="Enter flight ID" />
            </VBox>

            <!-- Flight Number -->
            <VBox spacing="5">
                <Label text="Flight Number" />
                <TextField fx:id="flightNumberField" promptText="Enter flight number" />
            </VBox>

            <!-- Airline -->
            <VBox spacing="5">
                <Label text="Airline" />
                <TextField fx:id="airlineField" promptText="Enter airline name" />
            </VBox>

            <!-- Destination -->
            <VBox spacing="5">
                <Label text="Destination" />
                <TextField fx:id="destinationField" promptText="Enter destination" />
            </VBox>

            <!-- Departure Date -->
            <VBox spacing="5">
                <Label text="Departure Date" />
                <DatePicker fx:id="departureDateField" />
            </VBox>

            <!-- Arrival Date -->
            <VBox spacing="5">
                <Label text="Arrival Date" />
                <DatePicker fx:id="arrivalDateField" />
            </VBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveChangesButton" onAction="#handleSaveChanges" prefWidth="120.0" style="-fx-background-color: #00AFF0; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;">
                    Save Changes
                </Button>

                <Button fx:id="resetButton" onAction="#resetFormFields" prefWidth="120.0" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;" text="Cancel">
                    Reset
                </Button>
            </HBox>

            <!-- Success Message -->
            <Label fx:id="successMessageLabel" alignment="CENTER" style="-fx-font-size: 14px; -fx-text-fill: green;" text="" visible="false" />
        </VBox>
    </children>
</VBox>
