<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddListingController">
    <children>
        <VBox spacing="15.0" style="-fx-padding: 20;" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <!-- Header Label -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00affa;" text="Add New Listing" />
                    </children>
                </HBox>

                <!-- Listing Type Selection -->
                <Label text="Listing Type">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="listingTypeComboBox" promptText="Select Listing Type" />

                <!-- Fields Pane -->
                <AnchorPane fx:id="fieldsPane" VBox.vgrow="ALWAYS">
                    <!-- Flight Fields -->
                    <VBox fx:id="flightFieldsContainer" spacing="10.0" VBox.vgrow="ALWAYS">
                        <Label text="Flight ID" />
                        <TextField fx:id="flightIdField" promptText="Enter Flight ID" />

                        <Label text="Airline" />
                        <TextField fx:id="airlineField" promptText="Enter Airline" />

                        <Label text="Destination" />
                        <TextField fx:id="destinationField" promptText="Enter Destination" />

                        <Label text="Departure Date" />
                        <DatePicker fx:id="departureDateField" promptText="Select Departure Date" />

                        <Label text="Arrival Date" />
                        <DatePicker fx:id="arrivalDateField" promptText="Select Arrival Date" />

                        <Label text="Price" />
                        <TextField fx:id="priceField" promptText="Enter Price" />

                        <Label text="Takeoff Country" />
                        <TextField fx:id="takeoffCountryField" promptText="Enter Takeoff Country" />

                        <Label text="Landing Country" />
                        <TextField fx:id="landingCountryField" promptText="Enter Landing Country" />
                    </VBox>

                    <!-- Hotel Fields -->
                    <VBox fx:id="hotelFieldsContainer" spacing="10.0" visible="false" VBox.vgrow="ALWAYS">
                        <Label text="Hotel Name" />
                        <TextField fx:id="nameField" promptText="Enter Hotel Name" />

                        <Label text="Location" />
                        <TextField fx:id="locationField" promptText="Enter Location" />

                        <Label text="Price" />
                        <TextField fx:id="hotelPriceField" promptText="Enter Price" />

                        <Label text="Rate" />
                        <TextField fx:id="hotelRateField" promptText="Enter Rate" />
                    </VBox>
                </AnchorPane>

                <!-- Add Button -->
                <HBox alignment="CENTER">
                    <children>
                        <Button onAction="#addListing" style="-fx-background-color: #00affa; -fx-text-fill: white;" text="Add Listing" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
