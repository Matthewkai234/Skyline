<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.5" prefWidth="178.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SidebarController">
   <items>
      <!-- Sidebar -->
      <VBox maxWidth="200.0" minWidth="150" spacing="10" style="-fx-background-color: #00affa; -fx-padding: 10;" stylesheets="@../styles/sidebar-nav-view.css">
         <!-- Logo Section -->
         <StackPane VBox.vgrow="NEVER">
            <ImageView fitHeight="120.0" fitWidth="135.0" preserveRatio="true">
               <Image url="@../images/skyline.png" />
            </ImageView>
         </StackPane>

         <!-- Navigation Menu -->
         <VBox spacing="16.0" style="-fx-padding: 20 0;" VBox.vgrow="ALWAYS">
            <!-- Home -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;" styleClass="HBox">
               <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                  <Image url="@../images/home-5-48.png" />
               </ImageView>
               <Button mnemonicParsing="false" onAction="#home" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 16;" text="Home">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </HBox>

            <!-- Flights -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;" styleClass="HBox">
               <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                  <Image url="@../images/airplane-11-48.png" />
               </ImageView>
               <Button mnemonicParsing="false" onAction="#flights" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 16;" text="Flights">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </HBox>

            <!-- Hotels -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;" styleClass="HBox">
               <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                  <Image url="@../images/hotel.png" />
               </ImageView>
               <Button mnemonicParsing="false" onAction="#hotels" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 16;" text="Hotels">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </HBox>

            <!-- Bookings -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;" styleClass="HBox">
               <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                  <Image url="@../images/banknotes-48.png" />
               </ImageView>
               <Button mnemonicParsing="false" onAction="#bookings" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 16;" text="Bookings">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </HBox>


            <!-- Listings -->
            <HBox fx:id="listingsButtonBox" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;" styleClass="HBox">
               <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                  <Image url="@../images/list-ingredients-48.png" />
               </ImageView>
               <Button mnemonicParsing="false" onAction="#listings" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 16;" text="Listings">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </HBox>

         </VBox>
         <VBox>

            <children>

               <!-- Logout Section -->
               <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;" styleClass="logout-Nav" stylesheets="@../styles/sidebar-nav-view.css" VBox.vgrow="ALWAYS">
                  <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                     <Image url="@../images/logout.png" />
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#login" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 16;" text="Logout">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </HBox>
            </children>
         </VBox>
      </VBox>
      <HBox>
         <HBox fx:id="contentArea" alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
      </HBox>
   </items>
</SplitPane>