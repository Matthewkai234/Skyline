<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditlistingHotel">
    <children>
        <!-- Main Content Area -->
        <VBox spacing="15" style="-fx-background-color: #DCDCDC; -fx-padding: 20;" VBox.vgrow="ALWAYS">

            <!-- Title with Back Arrow -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Edit Hotel" />
            </HBox>

            <!-- Hotel ID -->
            <VBox spacing="5">
                <Label text="Hotel ID" />
                <TextField fx:id="hotelIdField" promptText="Enter hotel ID" />
            </VBox>

            <!-- Hotel Name -->
            <VBox spacing="5">
                <Label text="Hotel Name" />
                <TextField fx:id="hotelNameField" promptText="Enter hotel name" />
            </VBox>

            <!-- Hotel Location -->
            <VBox spacing="5">
                <Label text="Hotel Location" />
                <TextField fx:id="hotelLocationField" promptText="Enter hotel location" />
            </VBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveChangesButton" onAction="#handleSaveChanges" prefWidth="120.0" style="-fx-background-color: #00AFF0; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;">
                    Save Changes
                </Button>

                <Button fx:id="resetButton" onAction="#resetFormFields" prefWidth="120.0" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5;" text="Cancel">
                    Reset
                </Button>
            </HBox>

            <!-- Success Message -->
            <Label fx:id="successMessageLabel" alignment="CENTER" style="-fx-font-size: 14px; -fx-text-fill: green;" text="" visible="false" />
        </VBox>
    </children>
</VBox>
